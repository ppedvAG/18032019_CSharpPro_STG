<UserControl x:Class="TPL_Unwrap.TodeslaserZielvorrichtungControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPL_Unwrap"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <Canvas>
        <Rectangle Name="r1" Fill="Transparent" Width="60" Height="60" Stroke="BlueViolet" StrokeThickness="3" Canvas.Left="50" Canvas.Top="100"/>

        <Rectangle Fill="Transparent" Name="r2" Width="60" Height="60" Stroke="Green" StrokeThickness="3" Canvas.Left="190" Canvas.Top="200" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="45"/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Canvas>
</UserControl>
