<Window x:Class="TPL_Unwrap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPL_Unwrap"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <DockPanel Margin="20">
        <WrapPanel DockPanel.Dock="Top">
            <Button Click="Button_Click_Blue">Center Blue</Button>
            <Button Click="Button_Click_Green">Center Green</Button>
            <Button Click="Button_Click_Both">Center Both</Button>
            <Button Click="Button_Click_Reset">Reset</Button>

        </WrapPanel>
        <local:TodeslaserZielvorrichtungControl x:Name="laserZielControl"/>
    </DockPanel>
</Window>
