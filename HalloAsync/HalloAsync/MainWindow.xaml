<Window x:Class="HalloAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HalloAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <StackPanel Margin="12">
        <Button Click="StartOhneThread">Start ohne Threading</Button>
        <Button Click="StartTask">Start Task (Dispatcher)</Button>
        <Button Click="StartTaskTs">Start Task (TaskScheduler)</Button>
        <Button Click="StartAsync">Async/Await</Button>

        <Button Click="StartCalc">Calc World</Button>
        <Button Click="StartStartCalc">Start StartCalc</Button>
        <Button Click="StartNested">Start Nestet</Button>
        <Button Click="Abort">Abbrechen</Button>
        <Separator/>
        <ProgressBar Name="pb1" Height="22"/>
    </StackPanel>
</Window>
